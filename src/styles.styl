body
  background-color #2b2b2b
  margin 0
  padding 0
  font-size 16px

.container
  color #e2e2e2
  background-color #313336
  margin 0 36px

.notifications-box
  position fixed
  left 0
  height 35px
  width 100%

.notification-box___item
  float right
  width 200px
  height 28px
  text-align left
  border 1px solid
  padding 3px
  &.-error
    background-color #e37763
    border-color #d06d5b

.account-manage
  &__buttons
    border 1ps solid red

.account-info
  padding 15px
  padding-top 25px
  &__name
    margin 0
    font-size 2em
  &__iban
    margin 0
    font-weight normal
    font-size 1em
.account-balance-container
  float right
  font-size 1em

.account-buttons
  &__btn
    background-color #3c3e41
    padding 5px 10px
    border 1px solid #adadad
    color #adadad
    border-radius 3px
    cursor pointer
    &:hover, &:active, &:focus
      background-color #414346

.debit-and-credit-list
  width 100%
  overflow-y scroll
  border-spacing 0
  &__item
    padding 6px
    background-color #3c3e41
    &:nth-of-type(odd)
      background-color #434548
    &:last-of-type
      .debit-and-credit-list__cell
        border-bottom 0
  &__cell
    padding 5px
    border-bottom 1px solid
    border-left 1px solid
    border-color #2b2b2b
    &:first-of-type
      border-left 0
  &__header
    padding 10px
