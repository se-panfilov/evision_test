html, body
  height:100%

body
  background-color #2b2b2b
  margin 0
  padding 0
  font-size 16px

.container
  height 100%

.account
  height 100%
  color #e2e2e2
  background-color #313336
  margin 0 36px
  display flex
  flex-direction column
  justify-content space-between
  &__item
    display block
    padding 15px
  &__info
    padding 15px
    padding-top 25px
  &__list
    padding 15px 0
  &__manage
    &__buttons
      border 1ps solid red

.account-info
  &__name
    margin 0
    font-size 2em
  &__iban
    margin 0
    font-weight normal
    font-size 1em

.account__info
  display flex
  flex-direction row
  justify-content space-between
  &__section
    color red


.notifications-box
  position fixed
  left 0
  height 35px
  width 100%

.notification-box___item
  float right
  width 200px
  height 28px
  text-align left
  border 1px solid
  padding 3px
  &.-error
    background-color #e37763
    border-color #d06d5b

.account-balance-container
  font-size 1.5em

.account-buttons
  &__btn
    background-color #3c3e41
    padding 5px 10px
    border 1px solid #adadad
    color #adadad
    border-radius 3px
    cursor pointer
    &:hover, &:active, &:focus
      background-color #414346

.debit-and-credit-list
  width 100%
  max-height 400px
  overflow-y scroll
  border-spacing 0
  &__item
    padding 6px
    background-color #3c3e41
    &:nth-of-type(odd)
      background-color #434548
      &:hover
        background-color #46484b
    &:last-of-type
      .debit-and-credit-list__cell
        border-bottom 0
    &:hover
      background-color #3f4144
  &__cell
    padding 5px
    border-bottom 1px solid
    border-left 1px solid
    border-color #2b2b2b
    &:first-of-type
      border-left 0
  &__header
    padding 10px
